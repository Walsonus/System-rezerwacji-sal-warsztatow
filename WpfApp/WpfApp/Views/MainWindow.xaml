<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="LightGreen" BorderThickness="10" BorderBrush="DarkSlateGray">

    <Window.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="FontSize" Value="50"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="ForestGreen"/>
            <Setter Property="BorderThickness" Value="10"/>
            <Setter Property="BorderBrush" Value="DarkSlateGray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkOliveGreen"/>
                                <Setter Property="Foreground" Value="Gold"/>
                                <Setter Property="BorderBrush" Value="Gold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" Text="System rezerwacji sal" HorizontalAlignment="Center" VerticalAlignment="Center"
                 FontFamily="Arial" FontWeight="Bold" Foreground="Black" Background="LightGreen" IsReadOnly="True"
                 BorderBrush="Transparent" BorderThickness="0"/>
        <Button x:Name="resBtn" Grid.Row="1" Content="Rezerwuj salę" Width="400" FontSize="50" FontFamily="Arial" FontWeight="Bold" Background="LightGreen" Click="resBtn_Click"/>
        <Button x:Name="exitbtn" Grid.Row="2" Content="Wyjście" Width="400" FontSize="40" FontFamily="Arial" FontWeight="Bold" Background="LightGreen" Click="exitBtn_Click"/>
    </Grid>
</Window>
